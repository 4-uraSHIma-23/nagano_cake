<body>
  <header>
  </header>

  <main>
    <div class="container">
      <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-3">
          <h4>注文情報入力</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-1"></div>
        <%= form_with model:@order, url:orders_confirm_path, local:true do |f| %>
        <div class="col-lg-9">
          <h5>支払方法</h5>
          <div class="radio-inline">
            <%= f.radio_button :payment_method, :"クレジットカード", checked: "checked" %>
            <%= f.label :"クレジットカード" %>
          </div>
          <div class="radio-inline">
            <%= f.radio_button :payment_method, :"銀行振込" %>
            <%= f.label :"銀行振込", class: "payment_method_label" %>
          </div>

          <h5>お届け先</h5>
          <div class="radio-inline">
            <%= f.radio_button :address_id, "ご自身の住所", checked: "checked" %>
            <%= f.label :address_id, 'ご自身の住所', value: "ご自身の住所" %>

          </div>
          <div class="radio-inline">
            <%= f.radio_button :address_id, "登録済み住所から選択" %>
            <%= f.label :address_id,  "登録済み住所から選択", value:  "登録済み住所から選択" %>

          </div>

        </div>
        <% end %>
      </div>
    </div>
  </main>
</body>
