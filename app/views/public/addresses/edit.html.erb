<body>

  <header>
  </header>

  <main>
    <div class="container">

      <div class="row">
        <div class="col-1"></div>
        <div class="col-2">
          <h4>配送先編集</h4>
        </div>
      </div>

      <%= form_with model:@address, local true do |f| %>
      <div class="row">
        <div class="col-3">
          <p>郵便番号(ハイフンなし)</p>
        </div>
        <div class="col-6">
          <%= f.text_field :postal_code %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>住所</p>
        </div>
        <div class="col-6">
          <%= f.text_area :address %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>宛名</p>
        </div>
        <div class="col-6">
          <%= f.text_field :name %>
        </div>
        <div class="col-2">
          <%= f.submit '変更内容を保存', class: 'btn btn-succes' %>
        </div>
      </div>
      <% end %>

    </div>
  </main>

</body>
