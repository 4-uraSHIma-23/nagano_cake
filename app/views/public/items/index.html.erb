<body>
  <header>

  </header>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-2">
          <h2>商品一覧<span>（<%= Item.count %>）</span></h2>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <% @items.each do |item| %>
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image %>
            <% end %>
              <%= item.name %>
              <%= item.price %>
          <% end %>
        </div>
        <div class="col-lg-2">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </main>
</body>
