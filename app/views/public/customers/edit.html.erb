<body>
  <header></header>
  <main>
    <div class="container">

      <%= form_with model:@customer, local:true do |f| %>
      <div class="row">
        <div class="col-1">
        </div>
        <div class="col-2">
          <p>名前</p>
        </div>
        <div class="col-2">
          <%= f.text_field, :last_name %>
        </div>
        <div class="col-2">
          <%= f.text_field, :first_name %>
        </div>
      </div>

      <div class="row">
        <div class="col-1">
        </div>
        <div class="col-2">
          <p>フリガナ</p>
        </div>
        <div class="col-2">
          <%= f.text_field, :last_name_kana %>
        </div>
        <div class="col-2">
          <%= f.text_field, :first_name_kana %>
        </div>
      </div>

      <div class="row">
        <div class="col-1">
        </div>
        <div class="col-2">
          <p>郵便番号</p>
        </div>
        <div class="col-2">
          <%= f.text_field, :postal_code %>
        </div>
      </div>

    　<div class="row">
        <div class="col-1">
        </div>
        <div class="col-2">
         <p>住所</p>
        </div>
        <div class="col-2">
          <%= f.text_field, :address, :size => "50" %>
        </div>
      </div>

      <div class="row">
        <div class="col-1">
        </div>
        <div class="col-2">
          <p>メールアドレス</p>
        </div>
        <div class="col-2">
          <%= f.email_field, :email %>
        </div>
      </div>

      <div class="row">
        <div class="col-1">
        </div>
        <div class="col-2">
        </div>
        <div class="col-3">
          <%= f.submit, "編集内容を保存", class: 'btn btn-success' %>
        </div>
        <div class="col-2">
        </div>
        <div class="col-1">
          <%= link_to, "退会する", customers_check_path, class: 'btn btn-danger' %>
        </div>
      </div>

      <% end %>

    </div>
  </main>
  <footer></footer>
</body>
