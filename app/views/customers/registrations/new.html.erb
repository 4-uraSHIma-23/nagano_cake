<body>
  <header>

  </header>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-2">
          <h4>新規会員登録</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-1">
          <div class="col-lg-8">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <table>
              <tr>
                <td><p>名前</p></td>
                <td><p>(姓)</p> <%= f.text_field :last_name %> <p>(名)</p><%= f.text_field :first_name %></td>
              </tr>
              <tr>
                <td><p>フリガナ</p></td>
                <td><p>(セイ)</p> <%= f.text_field :last_name_kana %> <p>(メイ)</p><%= f.text_field :first_name_kana %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              </tr>
              <tr>
                <td>郵便番号(ハイフンなし)</td>
                <td><%= f.text_field :postal_code %></td>
              </tr>
              <tr>
                <td>住所住所</td>
                <td><%= f.text_area :address %></td>
              </tr>
              <tr>
                <td>電話番号(ハイフンなし)</td>
                <td><%= f.text_area :telephone_number %></td>
              </tr>
              <tr>
                <td>パスワード(6文字以上)</td>
                <td>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password" %>
                </td>
              </tr>
              <tr>
                <td>パスワード(確認用)</td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              </tr>
              <tr>
                <td></td>
                <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-2">
          <h4>既に登録済みの方</h4></br>
          <p>  <%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
        </div>
      </div>
    </div>
    <%= render "customers/shared/links" %>
  </main>
</body>


