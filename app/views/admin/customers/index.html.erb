<body class="">
  <header class="">

  </header>

  <main class="">
    <div class="container">
      <div class="row">
        <div class="col">
          <h5>会員一覧</h5>
          <table>
            <thead>
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
              <% @customers.each do |customer| %>
              <tr>
                <td><%= item.id %>td><td>
                <td>
                  <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.name %>
                  <% end %>
                </td>
                <td><%= customer.email %></td>
                <td><%= customer.is_active %></td>
              </tr>
              <% end %>
           </thead>
         </table>
        </div>
      </div>
      <div class="row">
        <% paginate @customers %>
      </div>
    </div>
  </main>
</body>
