<body>
  <header>

  </header>

  <main>
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
          <h4>会員一覧</h4>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <table>
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
              <% @customers.each do |customer| %>
              <tr>
                <td><%= item.id %><td>
                <td>
                  <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.name %>
                  <% end %>
                </td>
                <td><%= customer.email %></td>
                <td><%= customer.is_active %></td>
              </tr>
              <% end %>
         </table>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-lg-2">
          <% paginate @customers %>
        </div>
      </div>
    </div>
  </main>
</body>
