<body class="">
  <header class="">
  </header>
  <main class="">
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-6">
          <%= form_with model:@customer, local:true do |f| %>
          <table>
            <tr>
              <td><p>会員ID</p></td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td><p>氏名</p></td>
              <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td><p>フリガナ</p></td>
              <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td><p>郵便番号</p></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><p>住所</p></td>
              <td><%= f.text_area :address %></td>
            </tr>
            <tr>
              <td><p>電話番号</p></td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td><p>メールアドレス</p></td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td><p>会員ステータス</p></td>
              <td>
                <div class="">
                  <%= f.radio_button :is_active, true %>
                  <%= f.label :is_active, '有効', value: true %>
                </div>
                <div class="">
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :is_active, '退会', value: false %>
                </div>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><div class=""><%= f.submit "変更を保存", class: 'btn btn-sm btn-success' %></div></td>
            </tr>
          </table>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</body>
