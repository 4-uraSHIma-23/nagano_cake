<body>
  <header>

  </header>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
          <h4>商品詳細</h4>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4">
          <%= attachment_image_tag @item, :image %>
        </div>
        <div class="col-lg-4">
          <table>
            <tr>
              <td><p>商品名</p></td>
              <td><p>商品説明</p></td>
              <td><p>ジャンル</p></td>
              <td><p>税込価格</br>
                     (税抜価格)</p>
              </td>
              <td><p>>販売ステータス</p></td>
            </tr>
            <tr>
              <td><%= @item.name %></td>
              <td><%= @item.introduction %></td>
              <td><%= @item.genre.name %></td>
              <td><%= (@item.price * 1.1).round %>(<%= @item.price %>)</td>
              <td><%= @item.is_active %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row justify-content-center">
        <%= link_to "編集する", edit_admin_item(@item), class: 'btn btn-lg btn-success' %>
      </div>
    </div>
  </main>
</body>
