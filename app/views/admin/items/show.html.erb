  <main class="">
    <div class="container">
      <div class="row">
        <div class="col">
          <h4>商品詳細</h4>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= attachment_image_tag @item, :image %>
        </div>
        <div class="col">
          <P>商品名          <%= @item.name %></P>
          <P>商品説明        <%= @item.introduction %></P>
          <P>ジャンル        <%= @item.genre.name %></P>
          <P>税込価格<%= (@item.price * 1.1).round %></br>
             (税抜価格)<%= @item.price %></P>
          <P>販売ステータス  <%= @item.name %></P>
          <%= link_to "編集する", edit_admin_item(@item) %>
        </div>
      </div>
    </div>
  </main>
