<body class="">
  <header class="">

  </header>
  <main class="">
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <h4>注文履歴一覧</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-7">
          <table>
            <thead>
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
              <tr>
                <td><%= l order.created_at %></td>
                <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                <td><%= order.order_details.sum(:amount) %></td>
                <td><%= order.status %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row justfy-content-center">
        <div class="col-lg-2">
          <%= paginate @orders %>
        </div>
      </div>
    </div>
  </main>
</body>
